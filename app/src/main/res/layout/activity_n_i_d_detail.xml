<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NIDDetailActivity">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#CDFDCA"
        android:id="@+id/cardView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nIdNo"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="NID No:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/name"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Name:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/fatherName"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Fathername:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/motherName"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="motherName:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/birthDate"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="birthDate:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/account"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="account:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/balance"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="balance:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/union"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="union:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/upazila"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="upazila:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/district"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="district:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/gotFund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="gotFund:"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/applied"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="applied:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>

            <Button
                android:id="@+id/paid"
                android:textColor="#fff"
                android:background="@drawable/button_ripple2"
                android:text="paid"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </Button>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>