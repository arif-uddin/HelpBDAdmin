<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ApplicationStatusActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#CDFDCA"
                android:id="@+id/cardView"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nIdNo"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="NID No:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/name"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Name:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/fatherName"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Fathername:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/motherName"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="motherName:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/birthDate"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="birthDate:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/account"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="account:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/balance"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="balance:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/union"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="union:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/upazila"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="upazila:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/district"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="district:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/gotFund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="gotFund:"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/status"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="status:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/check"
                                android:textColor="#fff"
                                android:background="@drawable/button_ripple2"
                                android:text="Check"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </Button>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/remove"
                                android:textColor="#fff"
                                android:background="@drawable/button_ripple2"
                                android:text="remove"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </Button>

                        </LinearLayout>




                    </LinearLayout>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="#CFD5CF"
                android:id="@+id/cardView1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nIdNo1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="NID No:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/name1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Name:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/fatherName1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Fathername:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/motherName1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="motherName:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/birthDate1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="birthDate:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/account1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="account:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/balance1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="balance:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/union1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="union:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/upazila1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="upazila:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/district1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="district:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/gotFund1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="gotFund:"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/applied1"
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="applied:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/confirm"
                                android:textColor="#fff"
                                android:background="@drawable/button_ripple2"
                                android:text="Confirm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </Button>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/paid"
                                android:textColor="#fff"
                                android:background="@drawable/button_ripple2"
                                android:text="paid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </Button>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>




</LinearLayout>